<record id="view_hotel_reservation_form" model="ir.ui.view">
            <field name="name">hotel_reservation.view_hotel_reservation_form.inherit</field>
            <field name="model">hotel.reservation</field>
            <field name="inherit_id" ref="hotel_reservation.view_hotel_reservation_form"/>
            <field name="arch" type="xml">

		<xpath expr="//field[@name='children']" position="replace">
		<field name="children" invisible="1"/>
		<field name="tiporest" readonly="1" invisible="1"/>
		<field invisible="1" name="tipoaloj" options="{'no_create': True,'no_create_edit': True}"   attrs="{'invisible': [('tiporest','=', True)]}" />
		<label for="estoyalojado"/>
		<div>
		<button name="button_estoyalojado" string="ChekIn" type="object" confirm="¿Deseas establecer el estado del Huésped como alojado?"/>
		<field name="estoyalojado" class="oe_inline"/>
		</div>
		</xpath>
		<xpath expr="//field[@name='adults']" position="replace">
		<field name="adults" invisible="1"/>
		</xpath>

        <xpath expr="//field[@name='checkin']" position="replace">
		<field name="checkin"/>
		</xpath>
        <xpath expr="//field[@name='checkout']" position="replace">
		<field name="checkout"/>
		</xpath>
        <xpath expr="//page[1]" position="replace">
        <page name="reservation_line" string="Reservas">
			<group>
				<group string="Habitaciones">                           
				   <field name="reservation_line" colspan="4" nolabel="1">
                      <form string="Reservation Line">
                        <separator string="Tipo Habitación"/>
                        <field name="name" invisible="1"/>
                        <field name="categ_id" colspan="4" nolabel="1"/>
                        <newline/>
                        <separator string="Habitacion Seleccionada"/>
                        <field name="reserve" colspan="4" string="Nº Hab" nolabel="1"/>
                      </form>
                      <tree>
                            <field name="reserve" string="Número" widget="many2many_tags"  nolabel="1"/>
                      </tree>
				   </field>
				</group>
			<group string="Servicios">
				<field name="relservicios" nolabel="1">
					<tree>
					<field name="name" string="Nombre"/>
					<field name="fechahora"/>
					</tree>
				</field>
			</group>
		   </group>
		</page>
        <page string="Observaciones Reserva">
			<field name="observaciones">
			</field>
         </page>

	</xpath>
            </field>
        </record>


