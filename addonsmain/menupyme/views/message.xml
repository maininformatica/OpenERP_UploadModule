<?xml version="1.0"?>
<openerp>
	<data>
		<record id="view_message_relation_form_inherit" model="ir.ui.view">
			<field name="name">message.relation.form.inherit</field>
			<field name="model">mail.message</field>
			<field name="inherit_id" ref="mail.view_message_form"/>
			<field name="arch" type="xml">
				
				<xpath expr="//field[@name='record_name']" position="after">
					
				
						<field name="tipo_etiquetas" widget="many2many_tags"/>
						<field name="relacion" on_change="onchange_relacion(rel_id)"/>
						
				</xpath>
				<xpath expr="//field[@name='subtype_id']" position="after">
					<field name="rel_id" invisible="1"/>
					<field name="tareas" attrs="{'invisible':[('rel_id','!=','TAREA')]}"/>
					
					<!-- 
					<field name="venta_pr"/>
					<field name="venta_pv"/>
					<field name="venta_ab"/>
					<field name="venta_pr"/>
					<field name="venta_pv"/>
					<field name="venta_ab"/>
					-->
					
					<field name="factura" attrs="{'invisible':[('rel_id','!=','FACTURA')]}"/>
					
					
					<field name="pedido_venta" attrs="{'invisible':[('rel_id','!=','PEDIDO VENTA')]}" invisible="1"/>
					<field name="pedido_compra" attrs="{'invisible':[('rel_id','!=','PEDIDO	COMPRA')]}" invisible="1"/>
					<field name="albaran" attrs="{'invisible':[('rel_id','!=','ALBARAN')]}" invisible="1"/>
					

					
				</xpath>
				                                				
				<xpath expr="/form/sheet/notebook/page[4]" position="attributes">
                		    <attribute name="invisible">True</attribute>
		                </xpath>
						
			</field>
			</record>
		<record id="view_message_relation_search_inherit" model="ir.ui.view">
			<field name="name">message.relation.search.inherit</field>
			<field name="model">mail.message</field>
			<field name="inherit_id" ref="mail.view_message_search"/>
			<field name="arch" type="xml">
			
				<xpath expr="//field[@name='body']" position="before">
				
					<field name="tipo_etiquetas"/>
					
					
				</xpath>
			</field>
		</record>

	</data>
</openerp>