<odoo>
  <data>
    <record model="ir.ui.view" id="pyme_comprasline_view_form">
      <field name="name">Pyme - Detalle Lineas Compra</field>
      <field name="model">purchase.order.line</field>
      <field name="arch" type="xml">

<form string="Purchase Order Line">
                                    <sheet>
                                        <group>
                                            <group>
