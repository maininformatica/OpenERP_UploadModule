<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_calendar_view" model="ir.ui.view">
        <field name="name">pyme_helpdesk.ticket.calendar.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
        <calendar date_start="create_date" string="Tickets" mode="month" color="user_id">
		   
		   <field name="name"/>
		   <field name="partner_id"/>
		   <field name="stage_id"/>
        </calendar>
        </field>
    </record>

    <record id="helpdesk_ticket_form_view" model="ir.ui.view">
        <field name="name">pyme_helpdesk.ticket.form.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button string="Asignarme Ticket" type="object" name="takeit" class="oe_highlight"/>
                    <!--<button string="Delegate" type="object" name="delegate" readonly="1"/>-->
                    <field name="stage_id" widget="statusbar" clickable="True"
                           options="{'fold_field': 'fold'}"/>
                </header>
                <sheet string="Ticket">
				<h2>TICKETS</h2>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="pyme_helpdesk.group_helpdesk_lite_manager"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="kanban_state" class="oe_inline" widget="kanban_state_selection"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Resumen del ticket..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required="1"  widget="many2one"
                                   context="{'default_name': contact_name, 'default_email': email_from}" />
                            <field name="contact_name" attrs="{'invisible': [('partner_id', '!=', False)]}"/>
                            <field name="email_from"/>
                            <field name="user_id"/>
                            <field name="team_id"/>
                        </group>
                        <group>
                            <field name="origen" readonly="1" />
						    <field name="tipo_etiquetas" widget="many2many_tags" />
                            <field name="priority" groups="base.group_user" widget="priority"/>
                            <field name="create_date" string="Creado" readonly="1"/>
                            <field name="date_deadline"/>
                            <field name="date_done" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description" widget="html" placeholder="Añadir Nota Interna..." groups="base.group_user"/>
                        </page>
                        <page string="Tareas">
                        <field name="tareas">
						 <tree create="false" delete="false">
						     <field name="message_needaction" invisible="1"/>
						     <field name="name"/>
						     <field name="project_id" invisible="1"/>
						     <field name="user_id"/>
						     <field name="date_deadline"/>
						     <field name="stage_id"/>
							 <field name="message_follower_ids" widget="many2many_tags"/>
						 </tree>
						</field>
                        <button string="Crear Nueva Tarea" type="object" name="crear_tarea" class="oe_highlight"/>				
                        </page>
						<page string="Seguimiento">

                            <field name="seguimiento_id">
							<tree delete="false" create="false">
                                  <button name="" readonly="1" string="" icon="fa-level-up" attrs="{'invisible': [('model_name_destino', '!=', 'helpdesk_lite.ticket')]}"/>
                                  <button name="" readonly="1" string="" icon="fa-level-down" attrs="{'invisible': [('model_name_destino', '=', 'helpdesk_lite.ticket')]}"/>
								  <field name="model_name_destino" invisible="1"/>
                                  <field name="write_date" string="Fecha"/>
								  <field name="mail_message" invisible="1"/>
                                  <field name="model" invisible="1"/>
                                  <field name="name" string="Descripción"/>
								  <button type="object" name="action_open" string="Ver Documento Origen" attrs="{'invisible': [('model_name_destino', '!=', 'helpdesk_lite.ticket')]}"/>
								  <!-- 
								  <button type="object" name="action_open_origen" string="Documento Origen"/>
                                  <field name="name_destino"/>
								  <button type="object" name="action_open_destino" string="Documento Destino"/>
								  -->
					              
								  </tree>
							</field>
                       
                        </page>
                        <page string="Extra Info" name="extra_info">
                            <group>
                                <group>
                                    <field name="id" groups="base.group_no_one"/>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="legend_blocked" invisible="1"/>
                                    <field name="legend_done" invisible="1"/>
                                    <field name="legend_normal" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_tree_view" model="ir.ui.view">
        <field name="name">pyme_helpdesk.ticket.tree.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <tree string="Seguimiento de Incidencias" delete="false" decoration-bf="message_needaction==True">
                <field name="message_needaction" invisible="1"/>
                <field name="id"/>
				<field name="origen"/>
                <field name="tipo_etiquetas" widget="many2many_tags"/>
				<field name="name"/>
                <field name="partner_id"/>
                <field name="priority" string="Prioridad"/>
                <field name="create_date" string="Creado"/>
                <field name="date_deadline"/>
                <field name="date_done" string="Finalizado"/>
                <field name="user_id"/>
                <field name="stage_id" widget="selection" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_filter" model="ir.ui.view">
        <field name="name">pyme_helpdesk.ticket.search.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <search string="Ticket Búsqueda">
                <field name="name" string="Ticket" filter_domain="['|', '|', '|', ('partner_id','child_of',self), ('description','ilike',self),('email_from','ilike',self),('name','ilike',self)]"/>
                <field name="id"/>
                <field name="partner_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="stage_id" domain="[]"/>
                <filter string="Mis Tickets" name="my_tickets" domain="['|',('user_id','=',uid),('user_id','=',False)]"/>
				<filter string="Tiene Tareas" name="task_tickets" domain="[('tareas','!=',False)]"/>
                <filter string="Sin Asignar" name="unassigned" domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter string="New" name="draft" domain="[('stage_id.sequence', '=', 1)]"/>
                <separator/>
                <filter string="Mensajes NO leídos" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                <filter string="Inactivos / Archivados" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Agrupar por" >
                    <filter string="Cliente" name="partner" context="{'group_by':'commercial_partner_id'}" />
                    <filter string="Asignado a" name="responsible" context="{'group_by':'user_id'}" />
                    <filter string="Prioridad" name="priority" context="{'group_by':'priority'}" />
                    <filter string="Estado" name="stage" context="{'group_by':'stage_id'}"/>
                    <filter string="Compañia" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <separator/>
                    <filter string="Dia de Creación" name="create" context="{'group_by':'create_date:day'}" help="Create Date"/>
                </group>
            </search>
        </field>
    </record>

