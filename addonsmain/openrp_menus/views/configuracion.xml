<odoo>
  <data>


    <record model="ir.ui.view" id="companyias_pyme_view_tree">
      <field name="name">Compañias</field>
      <field name="model">res.company</field>
      <field name="arch" type="xml">
		<tree string="Companies">
        	<field name="sequence" widget="handle"/>
            <field name="name"/>
            <field name="vat"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="companyias_pyme_view_form">
      <field name="name">Compañias</field>
      <field name="model">res.company</field>
      <field name="arch" type="xml">
<form string="Company">
                  <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
					
					 <div class="row">
                        <div class="alert alert-warning ml8 mr8" role="alert" attrs="{'invisible': [('logo','!=',False)]}">
                            Actualice los detalles de su empresa y cargue su Imagen de Empresa.
                        </div>
                    </div>
              
					
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
					
					
					 <hr/>
					 
<group><group>

                                    <field name="phone" required="1"/>
                                    <field name="email"/>
                                    <field name="vat"/>
									</group></group>
					
                    <notebook colspan="4">
					
					<page string="Diseño de Informes">
					 
					 
                    <div class="row mt16">
                      <group string="Diseño de Documentos / Informes">
                      </group>
                      <!-- field style="margin-right: 40px;" name="external_report_layout" widget="image_selection" options="{                             'background': {                                 'image_link': '/base/static/img/preview_background.png',                                 'preview_link': '/base/static/pdf/preview_background.pdf'                             },                             'boxed': {                                 'image_link': '/base/static/img/preview_boxed.png',                                 'preview_link': '/base/static/pdf/preview_boxed.pdf'                             },                             'clean': {                                 'image_link': '/base/static/img/preview_clean.png',                                 'preview_link': '/base/static/pdf/preview_clean.pdf'                             },                             'standard': {                                 'image_link': '/base/static/img/preview_standard.png',                                 'preview_link': '/base/static/pdf/preview_standard.pdf'                             }                         }"/ -->
                    </div>
                    <!-- footer -->
                        <button string="Save" type="object" class="oe_highlight" name="write"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    <!-- /footer -->
					
					</page>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"/>
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True}"/>
                                    </div>
                                    <field name="report_header" placeholder="e.g. Global Business Solutions"/>
                                </group>
                                <group>
                                    <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>

                                    <field name="company_registry"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}" id="company_currency" invisible="1"/>
                                    <field name="parent_id" groups="base.group_multi_company"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="report_footer" placeholder="e.g. Your Bank Accounts, one per line"/>
                                </group>
                                <group name="social_media"/>
                            </group>
                        </page>
                    </notebook>

                    </sheet>

                </form>
				
      </field>
    </record>


   <record model="ir.ui.view" id="configuracion_seriesventa_view_tree">
      <field name="name">Series Venta</field>
      <field name="model">sale.order.type</field>
      <field name="arch" type="xml">
<tree string="Type">
			<field name="type_doc" string="Tipo Documento"/>
                <field name="name" string="Prefijo"/>
				<field name="nextnum"/>
                <field name="warehouse_id" invisible="1"/>
                <field name="sequence_id" string="Secuencia" invisible="1"/>
                <field name="journal_id" invisible="1"/>
                <field name="picking_policy" invisible="1"/>
                <field name="description" string="Descripcion" invisible="1"/>
                <field name="habitual"/>
</tree>
      </field>
    </record>


   <record model="ir.ui.view" id="configuracion_seriesventa_view_form">
      <field name="name">Series Venta</field>
      <field name="model">sale.order.type</field>
      <field name="arch" type="xml">

<form string="Type">
  <button string="Convertir Serie Presupuesto en Habitual" attrs="{'invisible': [('type_doc', '!=', 'Presupuesto')]}" type="object" name="action_worflow_default_pr" confirm="Esta accion convertirá esta serie de documento en la utilizada en el traspaso de Presupuesto, Pedido, Albarán y Factura. ¿Estas Seguro?"/>
  <button string="Convertir Serie Pedido en Habitual" attrs="{'invisible': [('type_doc', '!=', 'Pedido')]}" type="object" name="action_worflow_default_pd" confirm="Esta accion convertirá esta serie de documento en la utilizada en el traspaso de Presupuesto, Pedido, Albarán y Factura. ¿Estas Seguro?"/>
  <button string="Convertir Serie Albarán en Habitual" attrs="{'invisible': [('type_doc', '!=', 'Albaran')]}" type="object" name="action_worflow_default_ab" confirm="Esta accion convertirá esta serie de documento en la utilizada en el traspaso de Presupuesto, Pedido, Albarán y Factura. ¿Estas Seguro?"/>
                <sheet>

                   <group>
                        <group>
                            <field name="warehouse_id" invisible="1"/>
							<field name="type_doc" string="Tipo Documento"/>
							<field name="name" string="Prefijo"/>
                            <field name="company_id" invisible="1"/>
                            <field name="sequence_id" string="Secuencia" invisible="1"/>
							<field name="nextnum" required="1"/>
                          <field name="habitual" readonly="1"/>
                        </group>
                        <group>
                            <field name="journal_id" invisible="1"/>
                    
                            <field name="payment_term_id" invisible="1"/>
                            <field name="pricelist_id" invisible="1"/>
                            <field name="incoterm_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
      </field>
    </record>



   <record model="ir.ui.view" id="configuracion_seriescompra_view_tree">
      <field name="name">Series Compra</field>
      <field name="model">purchase.order.type</field>
      <field name="arch" type="xml">
<tree string="Type">
			<field name="type_doc" string="Tipo Documento"/>
                <field name="name"/>
                <field name="warehouse_id" invisible="1"/>
                <field name="sequence_id" string="Secuencia"/>
                <field name="journal_id" invisible="1"/>
                <field name="description" string="Descripcion" invisible="1"/>
            </tree>
      </field>
    </record>



   <record model="ir.ui.view" id="configuracion_seriescontables_view_tree">
      <field name="name">Series Contables</field>
      <field name="model">account.journal</field>
      <field name="arch" type="xml">
		<tree string="Account Journal">
                    <field name="sequence" widget="handle" invisible="1"/>
      <field name="type"/>
      <field name="name" string="Documento Contable"/>
                    
					<field name="code" string="Prefijo"/>
					<field name="numbernext"/>
					<field name="belongs_to_company" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </tree>
      	    
      </field>
    </record>
	  
	  
	  
	  <record model="ir.ui.view" id="configuracion_seriescontables_view_form">
      <field name="name">Series Contables</field>
      <field name="model">account.journal</field>
      <field name="arch" type="xml">

         <form string="Type">
          <sheet>

            <group>
              <group>
               
                <field name="type" string="Tipo Documento"/>
                <field name="name" string="Documento Contable"/>
                <field name="code" string="Prefijo"/>
                <field name="numbernext"/>
              </group>
              <group>
                <field name="update_posted"/>
                <field name="group_invoice_lines"/>
              </group>
            </group>
            <group>
              <field name="description" string="Descripcion"/>
            </group>
          </sheet>
        </form>
        
        
        
        
        
        
	    
      </field>
    </record>



<record model="ir.ui.view" id="configuracion_usuarios_view_tree">
      <field name="name">Usuarios ODOO</field>
      <field name="model">res.users</field>
      <field name="arch" type="xml">  
			<tree string="Users"  delete="0" create="false" edit="false" import="false">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="lang"/>
                    <field name="login_date"/>
           </tree>

      </field>
    </record>


        <act_window id="change_password_wizard_action"
            name=""
            src_model="res.users"
            res_model="change.password.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_erp_manager"/>



<record model="ir.ui.view" id="configuracion_usuarios_view_form">
      <field name="name">Usuarios ODOO</field>
      <field name="model">res.users</field>
      <field name="arch" type="xml">  


<form string="Usuarios">
                    <header>
					<button string="Enviar E-Mail Reset Contraseña" type="object" name="action_reset_password" attrs="{'invisible': [('state', '!=', 'active')]}"/>

                    <field name="state" widget="statusbar"/>

                    </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <field name="email" invisible="1"/>
                            <label for="login" class="oe_edit_only" string="Direccion Email Principal"/>
                            <h2><field name="login"/></h2>
                            <group>
                                <field name="partner_id" readonly="1" string="Entidad Relacionada" required="0" groups="base.group_no_one" attrs="{'invisible': [('id', '=', False)]}"/>
                            </group>
                        </div>
                        <notebook colspan="4">
                            <page name="access_rights" string="Access Rights" invisible="1">
                                <group string="Multi Companies" attrs="{'invisible': [('companies_count', '&lt;=', 1)]}">
                                    <field string="Allowed Companies" name="company_ids" widget="many2many_tags"/>
                                    <field string="Current Company" name="company_id" context="{'user_preference': 0}"/>
                                    <field string="Companies count" name="companies_count" invisible="1"/>
                                </group>
                                <field name="groups_id"/>
                            </page>
                            <page string="Preferencias">
                                <group>
                                    <group string="Personalizacion" name="preferences">
                                        <field name="lang"/>
                                        <field name="tz" widget="timezone_mismatch" options="{'tz_offset_field': 'tz_offset'}"/>
                                        <field name="tz_offset" invisible="1"/>
										<field name="action_id" string="Menu Incial" options="{'no_create': True, 'no_open': True}"/>
                                    </group>
                                    <group string="Emails" name="messaging">
                                    <field name="signature"/>
									 <field name="notification_type" string="Modo Notificacion" widget="radio"/>
									 <field name="alias_id"/>
									 <field name="alias_contact" invisible="1"/>

									
									
									
									
                                </group>
									
									
                                </group>
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>


      </field>
    </record>


<!-- Action Compañias -->
    <record model="ir.actions.act_window" id="action_companyias_pymes">
      <field name="name">Compañias</field>
      <field name="res_model">res.company</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'default_compute_at_date':0}</field>
 <field name="view_ids" eval="[(5, 0, 0),
