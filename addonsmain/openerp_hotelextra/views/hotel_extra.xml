<record model="ir.ui.view" id="serviciosreservados_view_search">
      <field name="name">Buscador Servicios Generados</field>
      <field name="model">hotel.reservation.services</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
	  <search string="Buscador de Servicios">
                    <field name="name" string="Nombre"/>
					<field name="fechahora" string="Detalle"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Tipos de Servicio" name="tiposservicio" context="{'group_by':'tipodeservicio'}"/>
						<filter string="Servicios" name="servicios" context="{'group_by':'name'}"/>
						<filter string="Gestionados" name="gestionados" context="{'group_by':'gestionado'}"/>
                        <filter string="Fecha Gestionados" name="fechagestionados" context="{'group_by':'gestionadofecha'}"/>
                    </group>
               </search>
      </field>
    </record>




<record model="ir.ui.view" id="serviciosreservados_view_tree">
      <field name="name">Listado de Servicios Reservados</field>
      <field name="model">hotel.reservation.services</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
		<tree editable="top" create="false" import="false">
    		<field name="id" invisible="1"/>
			<button type="object" name="marcagestionado" string="Gestionado"  attrs="{'invisible': [('gestionado','=', True)]}"/>
			<field name="numreserva" readonly="1"/>
			<field name="partner_id" readonly="1"/>
			<field name="tipodeservicio" readonly="1"/>
			<field name="name" options="{'no_create': True}"  attrs="{'readonly': [('gestionado','=', True)]}"/>
			<field name="fechahora"  attrs="{'readonly': [('gestionado','=', True)]}"/>
			<field name="obs"  attrs="{'readonly': [('gestionado','=', True)]}"/>
			<field name="gestionado" readonly="1"/>
			<field name="gestionadofecha" readonly="1"/>
			<button type="object" name="quitagestionado" string="Vuelve a Pendiente"  attrs="{'invisible': [('gestionado','!=', True)]}"  confirm="¿Deseas Quitar la marca de gestionado de este Servicio?"/>
		</tree>
      </field>
    </record>



<record model="ir.ui.view" id="serviciosreservados_view_form">
      <field name="name">Listado de Servicios Reservados</field>
      <field name="model">hotel.reservation.services</field>
      <field name="priority">0</field>
      <field name="arch" type="xml">
		<form create="false">
		<group>
		<group>
    		<field name="id" invisible="1"/>
			<field name="numreserva" readonly="1"/>
			<field name="partner_id" readonly="1"/>
			<field name="obs"  attrs="{'readonly': [('gestionado','=', True)]}"/>
			</group>
			<group>
			<button type="object" name="marcagestionado" string="Gestionado"  attrs="{'invisible': [('gestionado','=', True)]}"/>
			<button type="object" name="quitagestionado" string="Vuelve a Pendiente"  attrs="{'invisible': [('gestionado','!=', True)]}" confirm="¿Deseas Quitar la marca de gestionado de este Servicio?"/>
			<field name="name"    attrs="{'readonly': [('gestionado','=', True)]}" options="{'no_create': True}"/>
			<field name="fechahora"   attrs="{'readonly': [('gestionado','=', True)]}"/>
			<field name="gestionado" readonly="1"/>
			<field name="gestionadofecha" readonly="1"/>
			
		</group>
		</group>


		</form>
      </field>
    </record>




        <record id="action_pyme_hotelextra_servreserv" model="ir.actions.act_window">
            <field name="name">Listado de Servicios Reservados</field>
            <field name="res_model">hotel.reservation.services</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('numreserva','!=', False)]</field>
            <field name="context"></field>
			<field name="search_view_id" ref="serviciosreservados_view_search"/>
     		<field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('serviciosreservados_view_tree')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('serviciosreservados_view_form')})]"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Listado de Servicios reservados
              </p>
            </field>
        </record>



		 <menuitem name="Servicios Reservados"
              id="menu_pyme_hotelextra_servreserv"
              parent="hotel_reservation.menu_hotel_reservation"
			  sequence="10"
			  action="action_pyme_hotelextra_servreserv"/> 


   </data>
</odoo>
                                                                                                                                      
                                                                                                                                      