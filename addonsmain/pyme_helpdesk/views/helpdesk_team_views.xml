<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Cateamions Search view -->
        <record id="support_team_search" model="ir.ui.view">
            <field name="name">Equipos - Búsquedas</field>
            <field name="model">helpdesk_lite.team</field>
            <field name="arch" type="xml">
                <search string="Equipos Búsqueda">
                    <filter name="personal" string="Mis Equipos" domain="['|', ('member_ids', '=', uid), ('user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Archivados / Inactivos" name="inactive" domain="[('active','=',False)]"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <group expand="0" string="Agrupar por...">
                        <filter string="Líder del Equipo" name="leader" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Case Teams Action -->
        <record id="support_team_dashboard_action" model="ir.actions.act_window">
            <field name="name">Escritorio</field>
            <field name="res_model">helpdesk_lite.team</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="support_team_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
					Haga clic aquí para definir un nuevo equipo de soporte.
                </p><p>
					Utilice el equipo de soporte para organizar sus diferentes ingenieros o
                    departamentos en equipos separados. Cada equipo trabajará en
                    su propia lista de entradas
                </p>
            </field>
        </record>

        <!-- Case Teams Form View -->

         <record id="support_team_view_form" model="ir.ui.view">
            <field name="name">pyme_helpdesk.team.form</field>
            <field name="model">helpdesk_lite.team</field>
            <field name="arch" type="xml">
                <form string="Equipo de Soporte">
                    <sheet>
                      <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Equipo de Soporte"/>
                            <h1>
                                <field name="name" placeholder="Nombre del Equipo ..."/>
                            </h1>
                            <div name="options_active"/>
                        </div>
                        <group>
                            <group name="left">
                                <field name="user_id" domain="[('share', '=', False)]"/>
								
                                <label for="alias_name" string="Email Alias" />
                                <div name="alias_def">
                                    <field name="alias_id" class="oe_read_only oe_inline"
                                        string="Email Alias" required="0"/>
                                    <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;" >
                                        <field name="alias_name" class="oe_inline"/>@<field name="alias_domain" class="oe_inline" readonly="1"/>
                                    </div>
                                </div>
                                <field name="alias_contact" class="oe_inline"
                                    groups="base.group_no_one"
                                    string="Aceptar Mails de..."/>

                            </group>
                            <group name="right">
							<field name="nuevo"/>

                            </group>
                        </group>
                        <notebook>
                            <page name="members" string="Miembros del Equipo">
                                <field name="member_ids" widget="many2many" >
                                    
                                </field>
                            </page>
                            <page string="Más Información" name="more_info" groups="base.group_no_one">
                                <group>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Siga este equipo de soporte para realizar un seguimiento automático de los eventos asociados a los usuarios de este equipo."/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Case Teams Tree View -->
        <record id="support_team_view_tree" model="ir.ui.view">
            <field name="name">pyme_helpdesk.team.tree</field>
            <field name="model">helpdesk_lite.team</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Equipos de Soporte">
                    <field name="name"/>
                    <field name="active" invisible="1"/>
                    <field name="user_id"/>
					<field name="nuevo"/>
                </tree>
            </field>
        </record>

