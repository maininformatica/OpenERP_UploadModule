<?xml version="1.0"?>
<odoo><data>
    <!-- Update Preferences form !-->
    <record id="res_users_view_form_preferences2" model="ir.ui.view">
        <field name="name">res.users.view.form.preferences.rasa_bot</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="mail.view_users_form_simple_modif_mail"/>
        <field name="arch" type="xml">
            <data>
                <field name="email" position="after">
                    <field name="rasabot_state" readonly="0"/>
                </field>
            </data>
        </field>
    </record>

    <!-- Update user form !-->
    <record id="res_users_view_form2" model="ir.ui.view">
        <field name="name">res.users.view.form.rasa_bot</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="mail.view_users_form_mail"/>
        <field name="arch" type="xml">
            <data>
                <field name="email" position="after">
                    <field name="rasabot_state" readonly="0"/>
                </field>
            </data>
        </field>
    </record>
</data></odoo>