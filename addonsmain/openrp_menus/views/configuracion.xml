                            (0, 0, {'view_mode': 'form', 'view_id': ref('companyias_pyme_view_form')})]"/>
    </record>


<!-- Action Series Venta -->
    <record model="ir.actions.act_window" id="action_seriesventa_pymes">
      <field name="name">Series Ventas</field>
      <field name="res_model">sale.order.type</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('type_doc', '!=', '')]</field>
      <field name="context">{}</field>
 <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('configuracion_seriesventa_view_tree')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('configuracion_seriesventa_view_form')})]"/>
    </record>





<!-- Action Series Compra -->
    <record model="ir.actions.act_window" id="action_seriescompra_pymes">
      <field name="name">Series Compras</field>
      <field name="res_model">purchase.order.type</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('type_doc', '!=', '')]</field>
      <field name="context">{}</field>
 <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('configuracion_seriescompra_view_tree')})]"/>
    </record>

<!-- Action Localizaciones Contables -->
    <record model="ir.actions.act_window" id="action_localizaciones_contables_pymes">
      <field name="name">Localizaciones Contables</field>
      <field name="res_model">ir.module.module</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('category_id','=',8)]</field>


    </record>


<!-- Action Series Facturas Venta -->
    <record model="ir.actions.act_window" id="action_series_fv_pymes">
      <field name="name">Documentos Contables</field>
      <field name="res_model">account.journal</field>
      <field name="view_mode">tree,form</field>
      <field name="domain"></field>
	  	   <field name="view_ids" eval="[(5, 0, 0),
              (0, 0, {'view_mode': 'tree', 'view_id': ref('configuracion_seriescontables_view_tree')}),
							(0, 0, {'view_mode': 'form', 'view_id': ref('configuracion_seriescontables_view_form')})]"/>

    </record>


<!-- Action Series Usuarios -->
    <record model="ir.actions.act_window" id="action_usuarios_pyme">
      <field name="name">Usuarios</field>
      <field name="res_model">res.users</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('id','>=',6)]</field>
	  <field name="view_ids" eval="[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('configuracion_usuarios_view_tree')}),
							(0, 0, {'view_mode': 'form', 'view_id': ref('configuracion_usuarios_view_form')})]"/>	   

    </record>



